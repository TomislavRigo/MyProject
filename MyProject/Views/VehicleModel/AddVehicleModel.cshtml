@model MyProject.MVC.Models.VehicleModelViewModel

@{
    ViewData["Title"] = "AddVehicleModel";
}

<h1>Add Vehicle Model</h1>

<div class="row">
    <div class="col-md-4">
        <form asp-action="AddVehicleModelAsync">
            <div asp-validation-summary="ModelOnly" class="text-danger" hidden></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Abrv" class="control-label"></label>
                <input asp-for="Abrv" class="form-control" />
                <span asp-validation-for="Abrv" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add" class="btn btn-primary" style="background-color:darkcyan; border:0pt"/>
            </div>
            <div class="form-group" hidden>
                <label asp-for="VehicleMakeId" class="control-label"></label>
                <input asp-for="VehicleMakeId" value="@ViewBag.Message" class="form-control" />
                <span asp-validation-for="VehicleMakeId" class="text-danger"></span>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="GetVehicleModelsAsync" style="color:darkcyan">Back to List</a>
</div>

